{
  "presets": [
    {
      "name": "Default",
      "description": "Balanced quality and speed for most clips",
      "settings": {
        "apply_stabilize": true,
        "model_path": "yolov8n-pose.pt",
        "device": "auto",
        "prefer_pillow": true,
        "extraction_method": "track",
        "smooth_sigma": 5.0,
        "stabilization_method": "moviepy",
        "zoom": 1.05,
        "ybias": 0.10,
        "max_shift_frac": 0.25,
        "border_mode": "reflect101",
        "reattach_audio": true,
        "split_method": "ffmpeg",
        "reencode_fallback": true,
        "tmp_dir": null,
        "target_w": 1080,
        "target_h": 1920,
        "ffmpeg_verbose": false
      }
    },
